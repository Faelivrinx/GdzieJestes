<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/list_item_contact_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

    <LinearLayout
        android:layout_alignBottom="@id/list_item_contact_avatar"
        android:layout_alignTop="@id/list_item_contact_avatar"
        android:layout_toEndOf="@id/list_item_contact_avatar"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/list_item_contact_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dominik Jurasz"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            />



    </LinearLayout>


</RelativeLayout>